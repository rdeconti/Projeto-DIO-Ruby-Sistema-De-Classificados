
<%= form_for @user,  url: sessions_path do |form| %>
  <div class='form-group'>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class='form-group'>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  
  <div class='actions'>
    <%= form.submit t("helpers.submit.login") %>
  </div>
<% end %>
